{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "es7"],

        "declaration": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,

        // This is only for the output folder structure
        "rootDir": "src/locale/",

        "declarationDir": "./locale/",
        "outDir": "./locale/",
    },
    "include": [
        "src/locale/**/*.ts",
    ]
}