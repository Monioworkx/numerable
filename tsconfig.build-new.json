{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "es7"],

        "declaration": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,

        // This property only works for the output folder structure
        "rootDir": "src/",

        "declarationDir": "./dist/",
        "outDir": "./dist/",
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "src/locale/*.ts",
    ]
}