{
    "name": "numerable",
    "version": "0.3.5",
    "description": "Number formatting library for Javascript and Node.js apps",
    "homepage": "https://numerablejs.com",
    "author": {
        "name": "Gaston Meseri"
    },
    "license": "MIT",
    "repository": "github:gastonmesseri/numerable",
    "bugs": "https://github.com/gastonmesseri/numerable/issues",
    "keywords": [
        "numerable",
        "number",
        "format",
        "parse",
        "formatting",
        "functional"
    ],
    "main": "dist/index.js",
    "module": "dist/esm/index.js",
    "sideEffects": false,
    "scripts": {
        "clean": "rimraf dist locale",
        "test": "jest --config jest.config.js",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage",
        "lint": "eslint . --ext .ts",
        "build": "npm run clean && npm run build:lib && npm run build:esmlib && npm run build:locale",
        "build:lib": "tsc --project tsconfig.build-lib.json",
        "build:esmlib": "tsc --project tsconfig.build-esmlib.json",
        "build:locale": "tsc --project tsconfig.build-locale.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "coveralls": "jest --coverage && coveralls < coverage/lcov.info"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/chance": "^1.1.0",
        "@types/jest": "^26.0.19",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "chance": "^1.1.7",
        "coveralls": "^3.1.0",
        "eslint": "^7.14.0",
        "jest": "^26.5.2",
        "ts-jest": "^26.4.1",
        "typescript": "^4.1.2"
    },
    "npmName": "numerable",
    "files": [
        "dist/**/*",
        "locale/**/*"
    ],
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
