{
    "name": "numerable",
    "version": "0.2.7",
    "description": "Number formatting and manipulation library for Javascript and Node.js apps",
    "homepage": "https://numerablejs.com",
    "author": {
        "name": "Gaston Meseri"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "repository": "github:gastonmesseri/numerable",
    "bugs": "https://github.com/gastonmesseri/numerable/issues",
    "keywords": [
        "numerable",
        "number",
        "format",
        "parse",
        "formatting",
        "functional"
    ],
    "scripts": {
        "clean": "rimraf dist locale",
        "test": "jest --config jest.config.js",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage",
        "lint": "eslint . --ext .ts",
        "build": "npm run clean && npm run build:lib && npm run build:locale",
        "build:lib": "webpack --config webpack.config.js",
        "build:locale": "tsc --project tsconfig.build-locale.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "bundle-report:server": "webpack-bundle-analyzer --port 4200 dist/stats.json",
        "bundle-report": "npm run build && npm run bundle-report:server"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/chance": "^1.1.0",
        "@types/jest": "^26.0.14",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "chance": "^1.1.7",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^7.14.0",
        "jest": "^26.5.2",
        "ts-jest": "^26.4.1",
        "ts-loader": "^8.0.12",
        "typescript": "^4.1.2",
        "webpack": "^5.10.0",
        "webpack-bundle-analyzer": "^4.2.0",
        "webpack-cli": "^4.2.0"
    },
    "npmName": "numerable",
    "files": [
        "dist/**/*",
        "locale/**/*"
    ],
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
